  %tbody
    - @cards.each do |card|
      %tr
        %td= card.lastname
        %td= card.firstname
        %td= card.secondname
        %td= card.nomer
        %td= card.insurancepolicy
        %td= card.typeoftreatment
        %td= card.dateofcreation
        %td= card.pindex
        %td= card.city
        %td= card.street
        %td= card.house
        %td= card.building
        %td= card.flat
        %td= card.telephone
        %td= card.passportseries
        %td= card.passportnumber
