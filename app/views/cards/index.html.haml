%table
  %thead
    %tr
      %th Lastname
      %th Firstname
      %th Secondname
      %th Nomer
      %th Insurancepolicy
      %th Typeoftreatment
      %th Dateofcreation
      %th Pindex
      %th City
      %th Street
      %th House
      %th Building
      %th Flat
      %th Telephone
