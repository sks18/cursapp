= form_for @card do |f|
  - if @card.errors.any?
    #error_explanation
      %h2= "#{pluralize(@card.errors.count, "error")} prohibited this card from being saved:"
      %ul
        - @card.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :lastname
    = f.text_area :lastname
  .field
    = f.label :firstname
    = f.text_area :firstname
  .field
    = f.label :secondname
    = f.text_area :secondname
  .field
    = f.label :nomer
    = f.number_field :nomer
  .field
    = f.label :insurancepolicy
    = f.number_field :insurancepolicy
  .field
    = f.label :typeoftreatment
    = f.text_area :typeoftreatment
  .field
    = f.label :dateofcreation
    = f.date_select :dateofcreation
  .field
    = f.label :pindex
    = f.number_field :pindex
  .field
    = f.label :city
    = f.text_area :city
  .field
    = f.label :street
    = f.text_area :street
  .field
    = f.label :house
    = f.text_area :house
  .field
    = f.label :building
    = f.text_area :building
  .field
    = f.label :flat
    = f.text_area :flat
  .field
    = f.label :telephone
    = f.text_area :telephone
  .field
    = f.label :passportseries
    = f.number_field :passportseries
  .field
    = f.label :passportnumber
    = f.number_field :passportnumber
  .field
    = f.label :passsportfrom
    = f.text_area :passsportfrom
  .field
    = f.label :passportwhen
    = f.date_select :passportwhen
  .field
    = f.label :allergy
    = f.text_area :allergy
  .actions
    = f.submit 'Save'
